// Custom styles.
code {
    color: #FF8A55;
    background: #fbf7f8;
    margin: 2px;
}
// 大代码块的自定义样式
.highlight, pre {
    margin: 5px 0;
    padding: 5px;
    border-radius: 3px;
}
.highlight, code, pre {
    border: 1px solid #d6d6d6;
}
// 主页文章添加阴影效果
.posts-expand { 
.post {
	margin-top: 30px;
	margin-bottom: 30px;
	padding-bottom: -5px;
	border-radius: 15px;
	-webkit-box-shadow: 5px 5px 20px rgba(119,118,118,.6);
	-moz-box-shadow: 5px 5px 20px rgba(119,118,118,.6);
}
}